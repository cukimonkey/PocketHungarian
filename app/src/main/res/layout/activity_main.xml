<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="vertical"
        tools:context="com.example.android.pockethungarian.MainActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
               <TextView
                android:id="@+id/basics"
                style="@style/Block_style01"
                android:text="@string/first_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/family"
                style="@style/Block_style02"
                android:text="@string/second_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/around_the_house"
                style="@style/Block_style01"
                android:text="@string/third_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/colors_and_numbers"
                style="@style/Block_style02"
                android:text="@string/fourth_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/grocery_and_shops"
                style="@style/Block_style01"
                android:text="@string/fifth_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/eating_out"
                style="@style/Block_style02"
                android:text="@string/sixth_block" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/accomodation"
                style="@style/Block_style01"
                android:text="@string/seventh_block" />
        </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

